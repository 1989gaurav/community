<?xml version="1.0" encoding="UTF-8"?>
<assembly>
  <id>windows</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>

    <!-- filter plain text -->
    <fileSet>
      <directory>src/main/distribution/text</directory>
      <outputDirectory>/</outputDirectory>
      <lineEnding>dos</lineEnding>
      <filtered>true</filtered>
    </fileSet>
    <!-- non-maven jars -->
    <fileSet>
      <directory>src/main/distribution/binary</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>system/lib/*.jar</include>
        <include>lib/*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/distribution/binary</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>bin/lib/wrapper-*</include>
        <include>bin/wrapper*.exe</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/distribution/shell-scripts</directory>
      <outputDirectory>/</outputDirectory>
      <lineEnding>dos</lineEnding>
      <includes>
        <include>**/*.bat</include>
      </includes>
      <filtered>true</filtered>
    </fileSet>
    <!-- java examples - shell scripts -->
    <fileSet>
      <directory>target/appassembler/bin</directory>
      <outputDirectory>examples/java/bin</outputDirectory>
      <fileMode>0755</fileMode>
      <includes>
        <include>*.bat</include>
      </includes>
    </fileSet>    
  </fileSets>

  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <unpack>false</unpack>
      <useProjectArtifact>false</useProjectArtifact>
      <includes>
        <include>org.neo4j:*</include>
        <include>org.apache.geronimo.specs:geronimo-jta_1.1_spec</include>
        <include>org.apache.servicemix.bundles:org.apache.servicemix.bundles.jline</include>
        <include>org.apache.servicemix.bundles:org.apache.servicemix.bundles.lucene</include>
        <include>com.google.protobuf:protobuf-java</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>system/lib</outputDirectory>
      <unpack>false</unpack>
      <useProjectArtifact>false</useProjectArtifact>
      <excludes>
        <exclude>org.neo4j:*</exclude>
        <exclude>org.neo4j.examples:*</exclude>
        <exclude>org.apache.geronimo.specs:geronimo-jta_1.1_spec</exclude>
        <exclude>org.apache.servicemix.bundles:org.apache.servicemix.bundles.jline</exclude>
        <exclude>org.apache.servicemix.bundles:org.apache.servicemix.bundles.lucene</exclude>
        <exclude>com.google.protobuf:protobuf-java</exclude>
      </excludes>
    </dependencySet>
    <!-- java examples -->
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <unpack>false</unpack>
      <useProjectArtifact>false</useProjectArtifact>
      <includes>
        <include>org.neo4j.examples:*</include>
      </includes>
      <excludes>
        <exclude>org.neo4j.examples:*:*:sources</exclude>
        <exclude>org.neo4j.examples:*:*:test-sources</exclude>
        <exclude>org.neo4j.examples:*:*:site</exclude>
      </excludes>
    </dependencySet>
   <dependencySet>
      <outputDirectory>examples/java/src</outputDirectory>
      <unpack>true</unpack>
      <useProjectArtifact>false</useProjectArtifact>
      <fileMode>0444</fileMode>
      <directoryMode>0777</directoryMode>
      <includes>
        <include>org.neo4j.examples:*:*:sources</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>examples/java/test</outputDirectory>
      <unpack>true</unpack>
      <useProjectArtifact>false</useProjectArtifact>
      <fileMode>0444</fileMode>
      <directoryMode>0777</directoryMode>
      <includes>
        <include>org.neo4j.examples:*:*:test-sources</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>examples/java/site</outputDirectory>
      <unpack>true</unpack>
      <useProjectArtifact>false</useProjectArtifact>
      <fileMode>0444</fileMode>
      <directoryMode>0777</directoryMode>
      <includes>
        <include>org.neo4j.examples:*:*:site</include>
      </includes>
    </dependencySet>
    <!-- java api docs -->
    <dependencySet>
      <outputDirectory>doc/java/api</outputDirectory>
      <unpack>true</unpack>
      <useProjectArtifact>false</useProjectArtifact>
      <fileMode>0444</fileMode>
      <directoryMode>0777</directoryMode>
      <includes>
        <include>org.neo4j:neo4j:*:javadoc</include>
      </includes>
    </dependencySet>
    


  </dependencySets>

</assembly>
