%ul
  :each property in properties
    %li
      %ul
        %li
          %input.property-id(type="hidden" value="#{property.getLocalId()}")
          :if property.hasKeyError()
            .error= property.getKeyError()
          %input.property-key(type="text" value="#{escape(property.getKey())}")
        %li
          :if property.hasValueError()
            .error= property.getValueError()
          %input.property-value(type="text" value="#{property.getValueAsHtml()}")
        %li
          %button.delete-property Remove

  %li 
    %button.add-property Add property
