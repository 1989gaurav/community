.workarea
  .controls.pad
    .span-half.data-console-wrap
      %input#data-console(value="#{htmlEscape(query)}")
      %button#data-execute-console.icon-button(title="Search")
      .helpbox.break
        %a(href="#") Syntax help
          %span.helptext <b>Things you can do with the search bar:</b><br /><b>Get node:</b> [node id]<br /><b>Get relationship:</b> rel:[relationship id]<br /><b>Get relationships for node:</b> rels:[node id]<br /><br /><b>Indexes</b><br /><b>Search nodes</b> node:index:[index]:[query]<br /><b>Search relationships:</b> rel:index:[index]:[query]<br /><b>Direct node lookup</b> node:index:[index]:[key]:[value]<br /><b>Direct relationship lookup</b> rel:index:[index]:[key]:[value]
    .span-half.last
      %ul.data-toolbar.button-bar
        %li
          %button#data-create-node.text-icon-button(title="Create a node") Node
        %li
          %button#data-create-relationship.text-icon-button(title="Create a relationship") Relationship
        :if viewType === "tabular"      
          %li
            %button#data-switch-view.icon-button(title="Switch view mode")
        :if viewType !== "tabular"      
          %li
            %button#data-switch-view.icon-button.tabular(title="Switch view mode")

    .break

  #data-area
