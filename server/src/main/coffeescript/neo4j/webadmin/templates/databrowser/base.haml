.workarea
  .controls.pad
    .span-half.data-console-wrap
      %input#data-console(value="#{htmlEscape(query)}")
      %button#data-execute-console.icon-button(title="Search")
      .helpbox.break
        %a(href="#") Syntax help
          %span.helptext <b>You can use the following syntaxes in the search bar:</b><br />[node id], rel:[relationship id],rels:[node id]<br />node:index:[index]:[query], rel:index:[index]:[query]
    .span-half.last
      %ul.data-toolbar.button-bar
        %li
          %button#data-create-node.text-icon-button(title="Create a node") Node
        %li
          %button#data-create-relationship.text-icon-button(title="Create a relationship") Relationship
        :if viewType === "tabular"      
          %li
            %button#data-switch-view.icon-button(title="Switch view mode")
        :if viewType !== "tabular"      
          %li
            %button#data-switch-view.icon-button.tabular(title="Switch view mode")

    .break

  #data-area
