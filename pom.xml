<project>
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.neo4j.examples</groupId>
	<artifactId>apoc</artifactId>
	<name>apoc-examples</name>
	<version>1.0-b8-SNAPSHOT</version>
	<description>Basic Neo4j examples</description>
	<parent>
		<groupId>org.neo4j</groupId>
		<artifactId>parent-pom</artifactId>
		<version>2</version>
	</parent>
	<pluginRepositories>
		<pluginRepository>
			<id>codehaus.snapshots</id>
			<name>Codehaus snapshots</name>
			<url>http://snapshots.repository.codehaus.org/
			</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</pluginRepository>
	</pluginRepositories>

	<dependencies>
		<dependency>
			<groupId>org.neo4j</groupId>
			<artifactId>apoc</artifactId>
			<version>1.0-b8-SNAPSHOT</version>
			<type>pom</type>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>appassembler-maven-plugin
				</artifactId>
				<configuration>
					<binPrefix>neo4j</binPrefix>
					<repositoryLayout>flat</repositoryLayout>
					<repositoryName>lib</repositoryName>
					<includeConfigurationDirectoryInClasspath>false
					</includeConfigurationDirectoryInClasspath>
					<platforms>
						<platform>windows</platform>
						<platform>unix</platform>
					</platforms>
					<programs>
						<program>
							<mainClass>org.neo4j.examples.apoc.EmbeddedNeoExample
							</mainClass>
							<name>EmbeddedNeo-example</name>
						</program>
						<program>
							<mainClass>
								org.neo4j.examples.apoc.EmbeddedNeoWithIndexingExample
							</mainClass>
							<name>EmbeddedNeo-example-with-indexing
							</name>
						</program>
						<program>
							<mainClass>org.neo4j.examples.apoc.ShellExample
							</mainClass>
							<name>Shell-example</name>
						</program>
					</programs>
				</configuration>
				<executions>
					<execution>
						<id>examples</id>
						<phase>package</phase>
						<goals>
							<goal>assemble</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<finalName>neo4j-${project.build.finalName}</finalName>
					<descriptors>
						<descriptor>src/main/assembly/apoc-assembly.xml
						</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>apoc-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>attached</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
